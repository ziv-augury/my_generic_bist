/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>

/ {
	model = "my_board_2";
	compatible = "my-board-2";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};
};


&spi0 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <3>;
	mosi-pin = <2>;
	miso-pin = <29>;
	sen2@0 {
		compatible = "my,sen2";
		status = "okay";
		reg = <0>;
		label = "SENSOR2";
		spi-max-frequency = <8000000>;
		bist;
	};
};
&spi1 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <43>;
	mosi-pin = <44>;
	miso-pin = <45>;
	sen3@0 {
		compatible = "my,sen3";
		status = "okay";
		reg = <0>;
		label = "SENSOR3";
		spi-max-frequency = <8000000>;
		bist;
	};
};


&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0xc000 0x32000>;
		};
		slot1_partition: partition@3e000 {
			label = "image-1";
			reg = <0x3e000 0x32000>;
		};
		scratch_partition: partition@70000 {
			label = "image-scratch";
			reg = <0x70000 0xa000>;
		};
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x7a000 0x6000>;
		};
	};
};

